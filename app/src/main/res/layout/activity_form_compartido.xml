<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    tools:context=".FormCompartidoActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:background="@drawable/app_bar_style"
        android:layout_width="match_parent"
        android:layout_height="60dp">
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nuevo formulario"
            android:fontFamily="@font/didact_gothic"
            android:layout_marginTop="4dp"
            android:textSize="32dp"
            android:textColor="@color/white"
            />

        <EditText
            android:id="@+id/txtCodigoForm"
            android:layout_width="363dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/esquinas_redondeadas"
            android:ems="10"
            android:fontFamily="@font/didact_gothic"
            android:hint="Ingresa el cÃ³digo para acceder al formulario"
            android:inputType="textMultiLine"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btnGuardarFormCodigo"
            android:layout_width="363dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/background_buttons"
            android:fontFamily="@font/didact_gothic"
            android:text="Acceder"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="visible" />

    </LinearLayout>
</FrameLayout>